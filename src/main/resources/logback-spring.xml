<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>logback</contextName>
    <!-- 设置变量：日志文件保存目录 -->
    <property name="log.path" value="F:/log/logback" />
    <!--设置日志格式-->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n"/>

    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>ERROR</level>
         </filter>-->
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!--异步将日志写入文件-->
    <!-- logback支持异步记录日志,可加快程序的主流程处理速度 -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="file" />
    </appender>

    <!-- 测试环境,多个使用逗号隔开. -->
    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="console" />
        </root>
        <!-- logback为java中的包 -->
        <logger name="com.example.demo.dao.AreaDao" level="DEBUG" additivity="false">
            <appender-ref ref="console"/>
        </logger>
    </springProfile>

    <!-- 生产环境. -->
    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="ASYNC" />
        </root>
        <!-- logback为java中的包 -->
        <logger name="com.example.demo.dao.AreaDao" level="DEBUG" additivity="false">
            <appender-ref ref="ASYNC"/>
        </logger>
    </springProfile>

</configuration>